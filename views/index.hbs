<div style="margin: 50px 0 0 30px;">
<button class="btn btn-danger"><a href="./todos/new" style="color: white;">Create</a></button>

<ul>
    {{#each todos}}
        <li style="padding: 10px;">
            <input type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
            {{this.name}}
            <a href="./todos/{{ this._id }}">Detail</a>
            <a href="./todos/{{ this._id }}/edit">Edit</a>
            <form action="./todos/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-dark">Delete</button>
            </form>
        </li>
    {{/each}}
</ul>
</div>